{
  "name": "nimbus-finance",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "backend",
    "web",
    "packages/parser-de"
  ],
  "scripts": {
    "dev": "concurrently -n api,web -c green,cyan \"npm -w backend run dev\" \"npm -w web run dev\"",
    "build": "npm -w packages/parser-de run build && npm -w backend run build && npm -w web run build",
    "smoke:dup": "curl -s -F \"file=@packages/parser-de/src/fixtures/generic_de.csv\" http://localhost:4000/api/imports/csv && curl -s -F \"file=@packages/parser-de/src/fixtures/generic_de.csv\" http://localhost:4000/api/imports/csv",
    "smoke:commerz": "curl -s -F \"file=@packages/parser-de/src/fixtures/commerzbank_sample.csv\" http://localhost:4000/api/imports/csv",
    "smoke:sparkasse": "curl -s -F \"file=@packages/parser-de/src/fixtures/sparkasse_sample.csv\" http://localhost:4000/api/imports/csv",
    "smoke:ing": "curl -s -F \"file=@packages/parser-de/src/fixtures/ing_sample.csv\" http://localhost:4000/api/imports/csv",
    "smoke:dkb": "curl -s -F \"file=@packages/parser-de/src/fixtures/dkb_sample.csv\" http://localhost:4000/api/imports/csv",
    "dev:reset": "powershell -Command \"Remove-Item -Force -ErrorAction SilentlyContinue .\\backend\\data\\dev.db\" && npm run dev",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc -b --pretty false",
    "test": "vitest run",
    "ci": "npm run fmt:check && npm run lint && npm run typecheck && npm run test"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.7"
  },
  "overrides": {
    "expo-document-picker": "~12.0.2"
  }
}
